void main ()

{

int x=50, i, j

printf (“ before Reversing binary = “) ;

for(j=31;j>=0;j- -)

printf(“ %d”, x>>j & 1);

printf(“\n”) ;

for(j=sizeof(x) - 1, i=0; i<j ;i++, j- -)

{

m= x>>j & 1;

n= x<<i & 1 ;

if(m! =n)

{

x= x ^ 1<<j;

x= x ^ 1 <<i;

}

}

printf (“ After Reversing binary = “) ;

for(j=sizeof(x;j>=0;j- -)

printf(“ %d”, x>>j & 1);

printf(“\n”) ;

}
